<div class="container">
    <h1>Tournament List</h1>
    <% if(profileType == "Owner") { %>
    <a href="/tournament-add" class="btn btn-dark" role="button">

        <i class="fas fa-plus-circle"></i> Create a tournament</a>
    <%  } %>
    <div class="row">
        <div class="col">
                <!--creating a table-->
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Teams/Participants</th>
                        <% if(displayName) { %>
                        <th scope="col" class="text-center">View</th>
                            <% if(profileType == "Owner") { %>
                            <th scope="col" class="text-center">Edit</th>
                            <th scope="col" class="text-center">Delete</th>
                            <%  } %>
                        <%  } %>
                    </tr>
                </thead>
                <tbody id="tournamentList" class="p-3 mb-2 bg-light text-black">
                    <!-- Repeatable Rows -->
                    <% for(let count=0; count < tournaments.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center">
                                <%= count + 1 %>
                            </th>
                            <td>
                                <%= tournaments[count].name %>
                            </td>
                            <td>
                                <%= tournaments[count].description %>
                            </td>
                            <td>
                                <%= tournaments[count].startDate %>
                            </td>
                            <td>
                                <%= tournaments[count].endDate %>
                            </td>
                            <td>
                                <%= tournaments[count].teams %>
                            </td>

                            <% if(displayName) { %> 
                            <td class="text-center col-1">
                                <a href="/tournament-view/<%= tournaments[count]._id %>" class="btn btn-dark btn-sm">
                                    <i class="fa-solid fa-eye"></i> View</a>
                            </td>
                                <% if(profileType == "Owner") { %> 
                                <td class="text-center col-1">
                                    <a href="/tournament-edit/<%= tournaments[count]._id %>" class="btn btn-dark btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit</a>
                                </td>

                                <td class="text-center col-1">
                                    <a href="/tournament-delete/<%= tournaments[count]._id %>"
                                        class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete</a>
                                </td>
                                <% } %>
                            <% } %>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>