<div class="container">
    <h1>Forums</h1>
   
    <div class="row">
        <div class="col">
            <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">
            <div class="container">
                  <div class="row">
                    <!-- Main content -->
                    <div class="col-lg-9 mb-3">
                        <div class="row text-left mb-5">
                            <div class="col-lg-6 mb-3 mb-sm-0">
                                    <div style="visibility: hidden; display: none; width: 285px; height: 801px; margin: 0px; float: none; position: static; inset: 85px auto auto;"></div><div data-settings="{&quot;parent&quot;:&quot;#content&quot;,&quot;mind&quot;:&quot;#header&quot;,&quot;top&quot;:10,&quot;breakpoint&quot;:992}" data-toggle="sticky" class="sticky" style="top: 85px;"><div class="sticky-inner">
                                        <div class="button">
                                          
                                            <a href="/forum-add">
                                                <button class="createButton"> Start a Forum! </button>
                                            </a>
                           
                </div>
                </div>
                </div>
                </div>  
        </div>
                      <!-- End of post 1 -->
                      <% for(let count=0; count < forums.length; count++) { %>
                      <div class="card row-hover pos-relative py-3 px-3 mb-3 border-warning border-top-0 border-right-0 border-bottom-0 rounded-0">
                        <div class="row align-items-center">
                          <div class="col-md-8 mb-3 mb-sm-0">
                            
                            <h5>
                                <%= forums[count].topic %>
                            </h5>
                            <p class="text-sm"><span class="op-6">Posted by <%= forums[count].name %></span>  </p>
                            <p><%= forums[count].comment %></p>
                          </div>
                          <div class="col-md-4 op-7">
                            <div class="row text-center op-7">
                                <% if(displayName) { %> 

                                  <td class="text-center col-1">
                                    <a href="/forum-comments/<%= forums[count]._id %>" class="btn btn-warning btn-sm">
                                        <i class="fas fa-comment-alt"></i> Comment</a>
                                  </td>
                                  <% if(profileType == "Owner") { %>
                                    <td class="text-center col-1">
                                        <a href="/forum-edit/<%= forums[count]._id %>" class="btn btn-dark btn-sm">
                                            <i class="fas fa-pencil-alt"></i> Edit</a>
                                    </td>
                                    
                                    <td class="text-center col-1">
                                        <a href="/forum-delete/<%= forums[count]._id %>"
                                            class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Delete</a>
                                    </td>
                                  <% } %>
                                <% } %>
                             
                            </div>
                           
                          </div>
                        </div>
                      </div>
                    

                      <% } %>
                      
            