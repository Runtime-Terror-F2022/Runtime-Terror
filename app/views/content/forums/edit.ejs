<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= forum._id %>">
                <div class="form-group">
                    <label for="topicTextField">Topic</label>
                    <input type="text" class="form-control" id="topicTextField"
                        placeholder="" name="topic"
                        value="<%= forum.topic %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Add your name here"
                        name="name" value="<%= forum.name %>" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="commentTextField">Comment</label>
                    <input type="textarea" class="form-control" id="commentTextField"
                        placeholder="Enter your comments here.." name="comment"
                        value="<%= forum.comment %>" required>
                </div>
                
                <button class="btn btn-dark" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/home" class="btn btn-danger">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>