<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>
            <div class="form-group">
                <br>
                <div class="jumbotron">
                <h1 class="display-6">Add Comments</h1>
                <br>
                <input id = "username" class="form-control" placeholder="Name">
                <br>
                <textarea id = "message" class="form-control" placeholder= "Your Comment Here">
               </textarea>
                <br>
                <button id="send" class="btn btn-success">Send</button>
                </div>
                <div id="comments">

                    
                    <div class="col-md-8 mb-3 mb-sm-0">
                            
                        <h5>
                            <%= comments.username %>
                        </h5>
                        <p class="text-sm"><span class="op-6"><%= comments.message %></span>  </p>
                      </div>

               </div>
               </div>

        </div>
    </div>
</div>