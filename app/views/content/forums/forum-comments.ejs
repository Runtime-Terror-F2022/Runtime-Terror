<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>
                <%= title %>
            </h1>
            <div class="form-group">
                <br>
                <div class="jumbotron">
                <h1 class="display-6">Add Comments</h1>
                <br>
                <input id = "username" class="form-control" placeholder="Name" value="<%= comments.username %>">
                <br>
                <textarea id = "comment" class="form-control" placeholder= "Your Comment Here" value="<%= comments.comment %>">
               </textarea>
                <br>
                <button id="send" class="btn btn-success">Send</button>
                </div>
                <div id="comments">

                    
                    <div class="col-md-8 mb-3 mb-sm-0">
                        <table class="table table-striped table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Comment</th>
                                    <% if(displayName) { %>
                                        <th scope="col" class="text-center">Delete</th>
                                    <%  } %>
                                </tr>
                            </thead>     
                        <tbody id="commentList" class="p-3 mb-2 bg-light text-black">
                            <!-- Repeatable Rows -->
                            <% for(let count=0; count < comments.length; count++) { %>
                                <tr>
                                    <th scope="row" class="text-center">
                                        <%= count + 1 %>
                                    </th>
                                    <td>
                                        <%= comments[count].username %>
                                    </td>
                                    <td>
                                        <%= comments[count].comment %>
                                    </td>
                                  
                                    <% if(displayName) { %> 
    
        
                                        <td class="text-center col-1">
                                            <a href="/comment-delete/<%= forums[count]._id %>"
                                                class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash-alt"></i> Delete</a>
                                        </td>

                                    <% } %>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
               </div>
               </div>

        </div>
    </div>
</div>